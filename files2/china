            <pubDate>Thu, 05 Nov 2020 07:40:00 GMT</pubDate>
            <guid isPermaLink="false">https://www.zaobao.com/realtime/china/story20201105-1098654</guid>
            <link>https://www.zaobao.com/realtime/china/story20201105-1098654</link>
            
            
            
            
            
                
            
            
