            <pubDate>Fri, 30 Oct 2020 23:46:00 GMT</pubDate>
            <guid isPermaLink="false">https://www.zaobao.com/realtime/china/story20201031-1097199</guid>
            <link>https://www.zaobao.com/realtime/china/story20201031-1097199</link>
            
            
            
            
            
                
            
            
