            <pubDate>Mon, 28 Dec 2020 00:38:00 GMT</pubDate>
            <guid isPermaLink="false">https://www.zaobao.com/realtime/china/story20201228-1111932</guid>
            <link>https://www.zaobao.com/realtime/china/story20201228-1111932</link>
            
            
            
            
            
                
            
            
