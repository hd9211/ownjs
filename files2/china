            <pubDate>Fri, 18 Sep 2020 13:19:00 GMT</pubDate>
            <guid isPermaLink="false">https://www.zaobao.com/realtime/china/story20200918-1085904</guid>
            <link>https://www.zaobao.com/realtime/china/story20200918-1085904</link>
            
            
            
            
            
                
            
            
