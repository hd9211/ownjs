            <pubDate>Thu, 24 Sep 2020 08:20:00 GMT</pubDate>
            <guid isPermaLink="false">https://www.zaobao.com/realtime/china/story20200924-1087519</guid>
            <link>https://www.zaobao.com/realtime/china/story20200924-1087519</link>
            
            
            
            
            
                
            
            
