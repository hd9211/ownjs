            <pubDate>Sat, 28 May 2022 09:10:00 GMT</pubDate>
            <guid isPermaLink="false">https://www.zaobao.com/realtime/china/story20220528-1277345</guid>
            <link>https://www.zaobao.com/realtime/china/story20220528-1277345</link>
            
            
            
            
            
                
            
            
