            <pubDate>Wed, 11 Nov 2020 07:17:00 GMT</pubDate>
            <guid isPermaLink="false">https://www.zaobao.com/realtime/china/story20201111-1100163</guid>
            <link>https://www.zaobao.com/realtime/china/story20201111-1100163</link>
            
            
            
            
            
                
            
            
