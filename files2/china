            <pubDate>Sat, 18 Jun 2022 14:05:00 GMT</pubDate>
            <guid isPermaLink="false">https://www.zaobao.com/realtime/china/story20220618-1284324</guid>
            <link>https://www.zaobao.com/realtime/china/story20220618-1284324</link>
            
            
            
            
            
                
            
            
