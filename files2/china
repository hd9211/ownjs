            <pubDate>Tue, 22 Dec 2020 05:42:00 GMT</pubDate>
            <guid isPermaLink="false">https://www.zaobao.com/realtime/china/story20201222-1110718</guid>
            <link>https://www.zaobao.com/realtime/china/story20201222-1110718</link>
            
            
            
            
            
                
            
            
