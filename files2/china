            <pubDate>Sat, 21 May 2022 08:01:00 GMT</pubDate>
            <guid isPermaLink="false">https://www.zaobao.com/realtime/china/story20220521-1275050</guid>
            <link>https://www.zaobao.com/realtime/china/story20220521-1275050</link>
            
            
            
            
            
                
            
            
