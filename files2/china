            <pubDate>Mon, 28 Mar 2022 09:32:00 GMT</pubDate>
            <guid isPermaLink="false">https://www.zaobao.com/realtime/china/story20220328-1256966</guid>
            <link>https://www.zaobao.com/realtime/china/story20220328-1256966</link>
            
            
            
            
            
                
            
            
