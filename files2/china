            <pubDate>Tue, 29 Sep 2020 02:30:00 GMT</pubDate>
            <guid isPermaLink="false">https://www.zaobao.com/realtime/china/story20200929-1088750</guid>
            <link>https://www.zaobao.com/realtime/china/story20200929-1088750</link>
            
            
            
            
            
                
            
            
