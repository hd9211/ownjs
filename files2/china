            <pubDate>Fri, 08 Apr 2022 03:49:00 GMT</pubDate>
            <guid isPermaLink="false">https://www.zaobao.com/realtime/china/story20220408-1260656</guid>
            <link>https://www.zaobao.com/realtime/china/story20220408-1260656</link>
            
            
            
            
            
                
            
            
