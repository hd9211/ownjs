            <pubDate>Fri, 13 Nov 2020 11:39:00 GMT</pubDate>
            <guid isPermaLink="false">https://www.zaobao.com/realtime/china/story20201113-1100743</guid>
            <link>https://www.zaobao.com/realtime/china/story20201113-1100743</link>
            
            
            
            
            
                
            
            
