            <pubDate>Sun, 27 Dec 2020 03:13:00 GMT</pubDate>
            <guid isPermaLink="false">https://www.zaobao.com/realtime/china/story20201227-1111736</guid>
            <link>https://www.zaobao.com/realtime/china/story20201227-1111736</link>
            
            
            
            
            
                
            
            
