            <pubDate>Wed, 30 Mar 2022 01:51:00 GMT</pubDate>
            <guid isPermaLink="false">https://www.zaobao.com/realtime/china/story20220330-1257513</guid>
            <link>https://www.zaobao.com/realtime/china/story20220330-1257513</link>
            
            
            
            
            
                
            
            
