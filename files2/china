            <pubDate>Tue, 21 Jun 2022 23:14:00 GMT</pubDate>
            <guid isPermaLink="false">https://www.zaobao.com/realtime/china/story20220622-1285308</guid>
            <link>https://www.zaobao.com/realtime/china/story20220622-1285308</link>
            
            
            
            
            
                
            
            
