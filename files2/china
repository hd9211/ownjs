            <pubDate>Mon, 07 Dec 2020 13:10:00 GMT</pubDate>
            <guid isPermaLink="false">https://www.zaobao.com/realtime/china/story20201207-1106918</guid>
            <link>https://www.zaobao.com/realtime/china/story20201207-1106918</link>
            
            
            
            
            
                
            
            
