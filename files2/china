            <pubDate>Mon, 08 Nov 2021 16:53:00 GMT</pubDate>
            <guid isPermaLink="false">https://www.zaobao.com/realtime/china/story20211108-1211446</guid>
            <link>https://www.zaobao.com/realtime/china/story20211108-1211446</link>
            
            
            
            
            
                
            
            
