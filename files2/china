            <pubDate>Thu, 28 Apr 2022 10:56:00 GMT</pubDate>
            <guid isPermaLink="false">https://www.zaobao.com/realtime/china/story20220428-1267449</guid>
            <link>https://www.zaobao.com/realtime/china/story20220428-1267449</link>
            
            
            
            
            
                
            
            
