            <pubDate>Sat, 26 Dec 2020 01:14:00 GMT</pubDate>
            <guid isPermaLink="false">https://www.zaobao.com/realtime/china/story20201226-1111543</guid>
            <link>https://www.zaobao.com/realtime/china/story20201226-1111543</link>
            
            
            
            
            
                
            
            
