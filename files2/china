            <pubDate>Mon, 21 Sep 2020 23:51:00 GMT</pubDate>
            <guid isPermaLink="false">https://www.zaobao.com/realtime/china/story20200922-1086840</guid>
            <link>https://www.zaobao.com/realtime/china/story20200922-1086840</link>
            
            
            
            
            
                
            
            
