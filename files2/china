            <pubDate>Thu, 08 Jul 2021 11:33:00 GMT</pubDate>
            <guid isPermaLink="false">https://www.zaobao.com/realtime/china/story20210708-1166279</guid>
            <link>https://www.zaobao.com/realtime/china/story20210708-1166279</link>
            
            
            
            
            
                
            
            
