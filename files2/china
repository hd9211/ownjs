            <pubDate>Thu, 12 Nov 2020 01:48:00 GMT</pubDate>
            <guid isPermaLink="false">https://www.zaobao.com/realtime/china/story20201112-1100410</guid>
            <link>https://www.zaobao.com/realtime/china/story20201112-1100410</link>
            
            
            
            
            
                
            
            
