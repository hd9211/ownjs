            <pubDate>Sun, 20 Dec 2020 05:29:00 GMT</pubDate>
            <guid isPermaLink="false">https://www.zaobao.com/realtime/china/story20201220-1110232</guid>
            <link>https://www.zaobao.com/realtime/china/story20201220-1110232</link>
            
            
            
            
            
                
            
            
