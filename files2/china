            <pubDate>Mon, 11 Apr 2022 09:48:00 GMT</pubDate>
            <guid isPermaLink="false">https://www.zaobao.com/realtime/china/story20220411-1261730</guid>
            <link>https://www.zaobao.com/realtime/china/story20220411-1261730</link>
            
            
            
            
            
                
            
            
