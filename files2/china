            <pubDate>Fri, 02 Oct 2020 23:50:00 GMT</pubDate>
            <guid isPermaLink="false">https://www.zaobao.com/realtime/china/story20201003-1089846</guid>
            <link>https://www.zaobao.com/realtime/china/story20201003-1089846</link>
            
            
            
            
            
                
            
            
