            <pubDate>Wed, 30 Dec 2020 00:20:00 GMT</pubDate>
            <guid isPermaLink="false">https://www.zaobao.com/realtime/china/story20201230-1112469</guid>
            <link>https://www.zaobao.com/realtime/china/story20201230-1112469</link>
            
            
            
            
            
                
            
            
