            <pubDate>Mon, 30 May 2022 11:04:00 GMT</pubDate>
            <guid isPermaLink="false">https://www.zaobao.com/realtime/china/story20220530-1277940</guid>
            <link>https://www.zaobao.com/realtime/china/story20220530-1277940</link>
            
            
            
            
            
                
            
            
