            <pubDate>Tue, 10 Nov 2020 08:58:00 GMT</pubDate>
            <guid isPermaLink="false">https://www.zaobao.com/realtime/china/story20201110-1099893</guid>
            <link>https://www.zaobao.com/realtime/china/story20201110-1099893</link>
            
            
            
            
            
                
            
            
