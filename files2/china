            <pubDate>Fri, 18 Feb 2022 09:20:00 GMT</pubDate>
            <guid isPermaLink="false">https://www.zaobao.com/realtime/china/story20220218-1244115</guid>
            <link>https://www.zaobao.com/realtime/china/story20220218-1244115</link>
            
            
            
            
            
                
            
            
