            <pubDate>Tue, 08 Dec 2020 23:52:00 GMT</pubDate>
            <guid isPermaLink="false">https://www.zaobao.com/realtime/china/story20201209-1107352</guid>
            <link>https://www.zaobao.com/realtime/china/story20201209-1107352</link>
            
            
            
            
            
                
            
            
