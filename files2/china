            <pubDate>Wed, 30 Dec 2020 05:01:00 GMT</pubDate>
            <guid isPermaLink="false">https://www.zaobao.com/realtime/china/story20201230-1112516</guid>
            <link>https://www.zaobao.com/realtime/china/story20201230-1112516</link>
            
            
            
            
            
                
            
            
