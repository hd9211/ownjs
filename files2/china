            <pubDate>Tue, 05 Oct 2021 10:33:00 GMT</pubDate>
            <guid isPermaLink="false">https://www.zaobao.com/realtime/china/story20211005-1200274</guid>
            <link>https://www.zaobao.com/realtime/china/story20211005-1200274</link>
            
            
            
            
            
                
            
            
