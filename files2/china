            <pubDate>Fri, 31 Dec 2021 08:28:00 GMT</pubDate>
            <guid isPermaLink="false">https://www.zaobao.com/realtime/china/story20211231-1228209</guid>
            <link>https://www.zaobao.com/realtime/china/story20211231-1228209</link>
            
            
            
            
            
                
            
            
