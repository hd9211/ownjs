            <pubDate>Sun, 11 Oct 2020 12:18:00 GMT</pubDate>
            <guid isPermaLink="false">https://www.zaobao.com/realtime/china/story20201011-1091918</guid>
            <link>https://www.zaobao.com/realtime/china/story20201011-1091918</link>
            
            
            
            
            
                
            
            
