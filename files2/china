            <pubDate>Tue, 17 Nov 2020 13:11:00 GMT</pubDate>
            <guid isPermaLink="false">https://www.zaobao.com/realtime/china/story20201117-1101740</guid>
            <link>https://www.zaobao.com/realtime/china/story20201117-1101740</link>
            
            
            
            
            
                
            
            
