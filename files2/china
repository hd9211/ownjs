            <pubDate>Wed, 22 Dec 2021 12:16:00 GMT</pubDate>
            <guid isPermaLink="false">https://www.zaobao.com/realtime/china/story20211222-1225503</guid>
            <link>https://www.zaobao.com/realtime/china/story20211222-1225503</link>
            
            
            
            
            
                
            
            
