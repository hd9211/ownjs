            <pubDate>Thu, 01 Oct 2020 02:15:00 GMT</pubDate>
            <guid isPermaLink="false">https://www.zaobao.com/realtime/china/story20201001-1089346</guid>
            <link>https://www.zaobao.com/realtime/china/story20201001-1089346</link>
            
            
            
            
            
                
            
            
