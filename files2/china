            <pubDate>Thu, 29 Oct 2020 07:02:00 GMT</pubDate>
            <guid isPermaLink="false">https://www.zaobao.com/realtime/china/story20201029-1096726</guid>
            <link>https://www.zaobao.com/realtime/china/story20201029-1096726</link>
            
            
            
            
            
                
            
            
