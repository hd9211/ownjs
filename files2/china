            <pubDate>Fri, 27 Nov 2020 07:50:00 GMT</pubDate>
            <guid isPermaLink="false">https://www.zaobao.com/realtime/china/story20201127-1104390</guid>
            <link>https://www.zaobao.com/realtime/china/story20201127-1104390</link>
            
            
            
            
            
                
            
            
