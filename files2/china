            <pubDate>Tue, 01 Feb 2022 14:14:00 GMT</pubDate>
            <guid isPermaLink="false">https://www.zaobao.com/realtime/china/story20220201-1238593</guid>
            <link>https://www.zaobao.com/realtime/china/story20220201-1238593</link>
            
            
            
            
            
                
            
            
