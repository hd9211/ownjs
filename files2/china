            <pubDate>Thu, 05 Nov 2020 06:51:00 GMT</pubDate>
            <guid isPermaLink="false">https://www.zaobao.com/realtime/china/story20201105-1098634</guid>
            <link>https://www.zaobao.com/realtime/china/story20201105-1098634</link>
            
            
            
            
            
                
            
            
