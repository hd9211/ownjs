            <pubDate>Fri, 29 Oct 2021 20:35:00 GMT</pubDate>
            <guid isPermaLink="false">https://www.zaobao.com/realtime/china/story20211029-1208327</guid>
            <link>https://www.zaobao.com/realtime/china/story20211029-1208327</link>
            
            
            
            
            
                
            
            
