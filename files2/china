            <pubDate>Wed, 18 Nov 2020 10:01:00 GMT</pubDate>
            <guid isPermaLink="false">https://www.zaobao.com/realtime/china/story20201118-1102023</guid>
            <link>https://www.zaobao.com/realtime/china/story20201118-1102023</link>
            
            
            
            
            
                
            
            
