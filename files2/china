            <pubDate>Thu, 19 May 2022 01:25:00 GMT</pubDate>
            <guid isPermaLink="false">https://www.zaobao.com/realtime/china/story20220519-1274196</guid>
            <link>https://www.zaobao.com/realtime/china/story20220519-1274196</link>
            
            
            
            
            
                
            
            
