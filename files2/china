            <pubDate>Wed, 18 Nov 2020 09:16:00 GMT</pubDate>
            <guid isPermaLink="false">https://www.zaobao.com/realtime/china/story20201118-1102017</guid>
            <link>https://www.zaobao.com/realtime/china/story20201118-1102017</link>
            
            
            
            
            
                
            
            
