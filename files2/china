            <pubDate>Thu, 11 Mar 2021 03:37:00 GMT</pubDate>
            <guid isPermaLink="false">https://www.zaobao.com/realtime/china/story20210310-1130222</guid>
            <link>https://www.zaobao.com/realtime/china/story20210310-1130222</link>
            
            
            
            
            
                
            
            
