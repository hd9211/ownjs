            <pubDate>Fri, 11 Dec 2020 04:40:00 GMT</pubDate>
            <guid isPermaLink="false">https://www.zaobao.com/realtime/china/story20201211-1107974</guid>
            <link>https://www.zaobao.com/realtime/china/story20201211-1107974</link>
            
            
            
            
            
                
            
            
