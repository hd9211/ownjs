            <pubDate>Sun, 29 Nov 2020 08:59:00 GMT</pubDate>
            <guid isPermaLink="false">https://www.zaobao.com/realtime/china/story20201129-1104836</guid>
            <link>https://www.zaobao.com/realtime/china/story20201129-1104836</link>
            
            
            
            
            
                
            
            
