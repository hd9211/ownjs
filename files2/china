            <pubDate>Sun, 11 Oct 2020 09:47:00 GMT</pubDate>
            <guid isPermaLink="false">https://www.zaobao.com/realtime/china/story20201011-1091940</guid>
            <link>https://www.zaobao.com/realtime/china/story20201011-1091940</link>
            
            
            
            
            
                
            
            
