            <pubDate>Tue, 27 Oct 2020 00:25:00 GMT</pubDate>
            <guid isPermaLink="false">https://www.zaobao.com/realtime/china/story20201027-1096092</guid>
            <link>https://www.zaobao.com/realtime/china/story20201027-1096092</link>
            
            
            
            
            
                
            
            
