            <pubDate>Mon, 19 Jul 2021 12:29:00 GMT</pubDate>
            <guid isPermaLink="false">https://www.zaobao.com/realtime/china/story20210719-1170896</guid>
            <link>https://www.zaobao.com/realtime/china/story20210719-1170896</link>
            
            
            
            
            
                
            
            
