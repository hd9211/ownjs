            <pubDate>Wed, 04 May 2022 23:05:00 GMT</pubDate>
            <guid isPermaLink="false">https://www.zaobao.com/realtime/china/story20220505-1269484</guid>
            <link>https://www.zaobao.com/realtime/china/story20220505-1269484</link>
            
            
            
            
            
                
            
            
