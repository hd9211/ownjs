            <pubDate>Mon, 28 Dec 2020 03:09:00 GMT</pubDate>
            <guid isPermaLink="false">https://www.zaobao.com/realtime/china/story20201228-1111962</guid>
            <link>https://www.zaobao.com/realtime/china/story20201228-1111962</link>
            
            
            
            
            
                
            
            
