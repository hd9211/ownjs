            <pubDate>Sat, 26 Dec 2020 12:07:00 GMT</pubDate>
            <guid isPermaLink="false">https://www.zaobao.com/realtime/china/story20201226-1111583</guid>
            <link>https://www.zaobao.com/realtime/china/story20201226-1111583</link>
            
            
            
            
            
                
            
            
