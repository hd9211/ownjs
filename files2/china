            <pubDate>Sun, 20 Dec 2020 23:59:00 GMT</pubDate>
            <guid isPermaLink="false">https://www.zaobao.com/realtime/china/story20201221-1110414</guid>
            <link>https://www.zaobao.com/realtime/china/story20201221-1110414</link>
            
            
            
            
            
                
            
            
