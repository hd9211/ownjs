            <pubDate>Tue, 10 May 2022 08:21:00 GMT</pubDate>
            <guid isPermaLink="false">https://www.zaobao.com/realtime/china/story20220510-1271291</guid>
            <link>https://www.zaobao.com/realtime/china/story20220510-1271291</link>
            
            
            
            
            
                
            
            
