            <pubDate>Sat, 03 Jul 2021 07:00:00 GMT</pubDate>
            <guid isPermaLink="false">https://www.zaobao.com/realtime/china/story20210703-1163717</guid>
            <link>https://www.zaobao.com/realtime/china/story20210703-1163717</link>
            
            
            
            
            
                
            
            
