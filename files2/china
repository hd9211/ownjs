            <pubDate>Wed, 25 Nov 2020 04:36:00 GMT</pubDate>
            <guid isPermaLink="false">https://www.zaobao.com/realtime/china/story20201125-1103786</guid>
            <link>https://www.zaobao.com/realtime/china/story20201125-1103786</link>
            
            
            
            
            
                
            
            
