            <pubDate>Sun, 30 Jan 2022 12:06:00 GMT</pubDate>
            <guid isPermaLink="false">https://www.zaobao.com/realtime/china/story20220130-1238173</guid>
            <link>https://www.zaobao.com/realtime/china/story20220130-1238173</link>
            
            
            
            
            
                
            
            
