            <pubDate>Sat, 31 Oct 2020 02:29:00 GMT</pubDate>
            <guid isPermaLink="false">https://www.zaobao.com/realtime/china/story20201031-1097215</guid>
            <link>https://www.zaobao.com/realtime/china/story20201031-1097215</link>
            
            
            
            
            
                
            
            
