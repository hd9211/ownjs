            <pubDate>Thu, 10 Dec 2020 04:04:00 GMT</pubDate>
            <guid isPermaLink="false">https://www.zaobao.com/realtime/china/story20201210-1107676</guid>
            <link>https://www.zaobao.com/realtime/china/story20201210-1107676</link>
            
            
            
            
            
                
            
            
