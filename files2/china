            <pubDate>Mon, 07 Dec 2020 14:01:00 GMT</pubDate>
            <guid isPermaLink="false">https://www.zaobao.com/realtime/china/story20201207-1106908</guid>
            <link>https://www.zaobao.com/realtime/china/story20201207-1106908</link>
            
            
            
            
            
                
            
            
