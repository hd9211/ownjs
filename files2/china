            <pubDate>Thu, 31 Dec 2020 04:54:00 GMT</pubDate>
            <guid isPermaLink="false">https://www.zaobao.com/realtime/china/story20201231-1112767</guid>
            <link>https://www.zaobao.com/realtime/china/story20201231-1112767</link>
            
            
            
            
            
                
            
            
