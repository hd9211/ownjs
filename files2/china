            <pubDate>Fri, 21 Jan 2022 19:33:00 GMT</pubDate>
            <guid isPermaLink="false">https://www.zaobao.com/realtime/china/story20220121-1235302</guid>
            <link>https://www.zaobao.com/realtime/china/story20220121-1235302</link>
            
            
            
            
            
                
            
            
