            <pubDate>Mon, 28 Dec 2020 08:59:00 GMT</pubDate>
            <guid isPermaLink="false">https://www.zaobao.com/realtime/china/story20201228-1112042</guid>
            <link>https://www.zaobao.com/realtime/china/story20201228-1112042</link>
            
            
            
            
            
                
            
            
