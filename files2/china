            <pubDate>Thu, 23 Dec 2021 15:57:00 GMT</pubDate>
            <guid isPermaLink="false">https://www.zaobao.com/realtime/china/story20211223-1225954</guid>
            <link>https://www.zaobao.com/realtime/china/story20211223-1225954</link>
            
            
            
            
            
                
            
            
