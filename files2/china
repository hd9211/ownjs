            <pubDate>Wed, 09 Dec 2020 09:01:00 GMT</pubDate>
            <guid isPermaLink="false">https://www.zaobao.com/realtime/china/story20201209-1107467</guid>
            <link>https://www.zaobao.com/realtime/china/story20201209-1107467</link>
            
            
            
            
            
                
            
            
