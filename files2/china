            <pubDate>Thu, 11 Mar 2021 18:35:00 GMT</pubDate>
            <guid isPermaLink="false">https://www.zaobao.com/realtime/china/story20210311-1130478</guid>
            <link>https://www.zaobao.com/realtime/china/story20210311-1130478</link>
            
            
            
            
            
                
            
            
