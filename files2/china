            <pubDate>Fri, 04 Dec 2020 06:31:00 GMT</pubDate>
            <guid isPermaLink="false">https://www.zaobao.com/realtime/china/story20201204-1106176</guid>
            <link>https://www.zaobao.com/realtime/china/story20201204-1106176</link>
            
            
            
            
            
                
            
            
