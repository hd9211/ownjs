            <pubDate>Sat, 07 May 2022 01:18:00 GMT</pubDate>
            <guid isPermaLink="false">https://www.zaobao.com/realtime/china/story20220507-1270177</guid>
            <link>https://www.zaobao.com/realtime/china/story20220507-1270177</link>
            
            
            
            
            
                
            
            
