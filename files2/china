            <pubDate>Wed, 26 Jan 2022 07:18:00 GMT</pubDate>
            <guid isPermaLink="false">https://www.zaobao.com/realtime/china/story20220126-1236774</guid>
            <link>https://www.zaobao.com/realtime/china/story20220126-1236774</link>
            
            
            
            
            
                
            
            
