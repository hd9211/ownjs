            <pubDate>Fri, 29 Oct 2021 18:35:00 GMT</pubDate>
            <guid isPermaLink="false">https://www.zaobao.com/realtime/china/story20211029-1208180</guid>
            <link>https://www.zaobao.com/realtime/china/story20211029-1208180</link>
            
            
            
            
            
                
            
            
