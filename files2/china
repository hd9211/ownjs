            <pubDate>Fri, 18 Dec 2020 02:16:00 GMT</pubDate>
            <guid isPermaLink="false">https://www.zaobao.com/realtime/china/story20201218-1109763</guid>
            <link>https://www.zaobao.com/realtime/china/story20201218-1109763</link>
            
            
            
            
            
                
            
            
