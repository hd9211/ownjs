            <pubDate>Wed, 01 Dec 2021 13:05:00 GMT</pubDate>
            <guid isPermaLink="false">https://www.zaobao.com/realtime/china/story20211201-1218834</guid>
            <link>https://www.zaobao.com/realtime/china/story20211201-1218834</link>
            
            
            
            
            
                
            
            
