            <pubDate>Mon, 02 Nov 2020 06:10:00 GMT</pubDate>
            <guid isPermaLink="false">https://www.zaobao.com/realtime/china/story20201102-1097698</guid>
            <link>https://www.zaobao.com/realtime/china/story20201102-1097698</link>
            
            
            
            
            
                
            
            
