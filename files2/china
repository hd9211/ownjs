            <pubDate>Mon, 23 Nov 2020 10:51:00 GMT</pubDate>
            <guid isPermaLink="false">https://www.zaobao.com/realtime/china/story20201123-1103321</guid>
            <link>https://www.zaobao.com/realtime/china/story20201123-1103321</link>
            
            
            
            
            
                
            
            
