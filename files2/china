            <pubDate>Thu, 24 Sep 2020 00:29:00 GMT</pubDate>
            <guid isPermaLink="false">https://www.zaobao.com/realtime/china/story20200924-1087439</guid>
            <link>https://www.zaobao.com/realtime/china/story20200924-1087439</link>
            
            
            
            
            
                
            
            
