            <pubDate>Wed, 16 Dec 2020 07:20:00 GMT</pubDate>
            <guid isPermaLink="false">https://www.zaobao.com/realtime/china/story20201216-1109256</guid>
            <link>https://www.zaobao.com/realtime/china/story20201216-1109256</link>
            
            
            
            
            
                
            
            
