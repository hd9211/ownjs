            <pubDate>Thu, 12 Nov 2020 05:31:00 GMT</pubDate>
            <guid isPermaLink="false">https://www.zaobao.com/realtime/china/story20201112-1100441</guid>
            <link>https://www.zaobao.com/realtime/china/story20201112-1100441</link>
            
            
            
            
            
                
            
            
