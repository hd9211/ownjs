            <pubDate>Thu, 17 Dec 2020 05:03:00 GMT</pubDate>
            <guid isPermaLink="false">https://www.zaobao.com/realtime/china/story20201217-1109508</guid>
            <link>https://www.zaobao.com/realtime/china/story20201217-1109508</link>
            
            
            
            
            
                
            
            
