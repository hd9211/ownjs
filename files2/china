            <pubDate>Wed, 07 Jul 2021 10:09:00 GMT</pubDate>
            <guid isPermaLink="false">https://www.zaobao.com/realtime/china/story20210707-1165789</guid>
            <link>https://www.zaobao.com/realtime/china/story20210707-1165789</link>
            
            
            
            
            
                
            
            
