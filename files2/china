            <pubDate>Tue, 21 Jun 2022 08:25:00 GMT</pubDate>
            <guid isPermaLink="false">https://www.zaobao.com/realtime/china/story20220621-1285282</guid>
            <link>https://www.zaobao.com/realtime/china/story20220621-1285282</link>
            
            
            
            
            
                
            
            
