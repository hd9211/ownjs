            <pubDate>Fri, 20 Nov 2020 09:52:00 GMT</pubDate>
            <guid isPermaLink="false">https://www.zaobao.com/realtime/china/story20201120-1102604</guid>
            <link>https://www.zaobao.com/realtime/china/story20201120-1102604</link>
            
            
            
            
            
                
            
            
