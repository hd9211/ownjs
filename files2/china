            <pubDate>Thu, 13 Jan 2022 22:10:00 GMT</pubDate>
            <guid isPermaLink="false">https://www.zaobao.com/realtime/china/story20220113-1232690</guid>
            <link>https://www.zaobao.com/realtime/china/story20220113-1232690</link>
            
            
            
            
            
                
            
            
