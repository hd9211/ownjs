            <pubDate>Sun, 15 Nov 2020 23:55:00 GMT</pubDate>
            <guid isPermaLink="false">https://www.zaobao.com/realtime/china/story20201116-1101345</guid>
            <link>https://www.zaobao.com/realtime/china/story20201116-1101345</link>
            
            
            
            
            
                
            
            
