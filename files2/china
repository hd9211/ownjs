            <pubDate>Sat, 24 Oct 2020 03:45:00 GMT</pubDate>
            <guid isPermaLink="false">https://www.zaobao.com/realtime/china/story20201024-1095404</guid>
            <link>https://www.zaobao.com/realtime/china/story20201024-1095404</link>
            
            
            
            
            
                
            
            
