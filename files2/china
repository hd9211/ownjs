            <pubDate>Thu, 19 Nov 2020 01:19:00 GMT</pubDate>
            <guid isPermaLink="false">https://www.zaobao.com/realtime/china/story20201119-1102217</guid>
            <link>https://www.zaobao.com/realtime/china/story20201119-1102217</link>
            
            
            
            
            
                
            
            
