            <pubDate>Mon, 23 Nov 2020 07:01:00 GMT</pubDate>
            <guid isPermaLink="false">https://www.zaobao.com/realtime/china/story20201123-1103278</guid>
            <link>https://www.zaobao.com/realtime/china/story20201123-1103278</link>
            
            
            
            
            
                
            
            
