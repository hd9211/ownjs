            <pubDate>Fri, 04 Feb 2022 12:28:00 GMT</pubDate>
            <guid isPermaLink="false">https://www.zaobao.com/realtime/china/story20220204-1239455</guid>
            <link>https://www.zaobao.com/realtime/china/story20220204-1239455</link>
            
            
            
            
            
                
            
            
