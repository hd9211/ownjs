            <pubDate>Tue, 08 Mar 2022 11:00:00 GMT</pubDate>
            <guid isPermaLink="false">https://www.zaobao.com/realtime/china/story20220308-1250224</guid>
            <link>https://www.zaobao.com/realtime/china/story20220308-1250224</link>
            
            
            
            
            
                
            
            
