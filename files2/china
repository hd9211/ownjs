            <pubDate>Wed, 11 May 2022 04:43:00 GMT</pubDate>
            <guid isPermaLink="false">https://www.zaobao.com/realtime/china/story20220511-1271508</guid>
            <link>https://www.zaobao.com/realtime/china/story20220511-1271508</link>
            
            
            
            
            
                
            
            
