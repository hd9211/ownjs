            <pubDate>Sat, 23 Oct 2021 07:22:00 GMT</pubDate>
            <guid isPermaLink="false">https://www.zaobao.com/realtime/china/story20211023-1206093</guid>
            <link>https://www.zaobao.com/realtime/china/story20211023-1206093</link>
            
            
            
            
            
                
            
            
