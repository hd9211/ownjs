            <pubDate>Mon, 07 Dec 2020 02:56:00 GMT</pubDate>
            <guid isPermaLink="false">https://www.zaobao.com/realtime/china/story20201207-1106847</guid>
            <link>https://www.zaobao.com/realtime/china/story20201207-1106847</link>
            
            
            
            
            
                
            
            
