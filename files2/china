            <pubDate>Sat, 02 Apr 2022 07:00:00 GMT</pubDate>
            <guid isPermaLink="false">https://www.zaobao.com/realtime/china/story20220402-1258647</guid>
            <link>https://www.zaobao.com/realtime/china/story20220402-1258647</link>
            
            
            
            
            
                
            
            
