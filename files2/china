            <pubDate>Mon, 26 Oct 2020 02:57:00 GMT</pubDate>
            <guid isPermaLink="false">https://www.zaobao.com/realtime/china/story20201026-1095853</guid>
            <link>https://www.zaobao.com/realtime/china/story20201026-1095853</link>
            
            
            
            
            
                
            
            
