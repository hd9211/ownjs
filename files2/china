            <pubDate>Wed, 25 Nov 2020 03:52:00 GMT</pubDate>
            <guid isPermaLink="false">https://www.zaobao.com/realtime/china/story20201125-1103775</guid>
            <link>https://www.zaobao.com/realtime/china/story20201125-1103775</link>
            
            
            
            
            
                
            
            
