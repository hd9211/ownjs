            <pubDate>Fri, 31 Dec 2021 22:04:00 GMT</pubDate>
            <guid isPermaLink="false">https://www.zaobao.com/realtime/china/story20211231-1228377</guid>
            <link>https://www.zaobao.com/realtime/china/story20211231-1228377</link>
            
            
            
            
            
                
            
            
