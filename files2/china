            <pubDate>Fri, 20 May 2022 12:02:00 GMT</pubDate>
            <guid isPermaLink="false">https://www.zaobao.com/realtime/china/story20220520-1274709</guid>
            <link>https://www.zaobao.com/realtime/china/story20220520-1274709</link>
            
            
            
            
            
                
            
            
