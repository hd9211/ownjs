            <pubDate>Wed, 06 Jan 2021 10:02:00 GMT</pubDate>
            <guid isPermaLink="false">https://www.zaobao.com/realtime/china/story20210106-1114299</guid>
            <link>https://www.zaobao.com/realtime/china/story20210106-1114299</link>
            
            
            
            
            
                
            
            
