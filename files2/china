            <pubDate>Tue, 03 Nov 2020 13:08:00 GMT</pubDate>
            <guid isPermaLink="false">https://www.zaobao.com/realtime/china/story20201103-1098051</guid>
            <link>https://www.zaobao.com/realtime/china/story20201103-1098051</link>
            
            
            
            
            
                
            
            
