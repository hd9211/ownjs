            <pubDate>Mon, 27 Sep 2021 14:05:00 GMT</pubDate>
            <guid isPermaLink="false">https://www.zaobao.com/realtime/china/story20210927-1197692</guid>
            <link>https://www.zaobao.com/realtime/china/story20210927-1197692</link>
            
            
            
            
            
                
            
            
