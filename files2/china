            <pubDate>Fri, 05 Nov 2021 07:09:00 GMT</pubDate>
            <guid isPermaLink="false">https://www.zaobao.com/realtime/china/story20211105-1210445</guid>
            <link>https://www.zaobao.com/realtime/china/story20211105-1210445</link>
            
            
            
            
            
                
            
            
