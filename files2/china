            <pubDate>Sat, 26 Dec 2020 00:22:00 GMT</pubDate>
            <guid isPermaLink="false">https://www.zaobao.com/realtime/china/story20201226-1111531</guid>
            <link>https://www.zaobao.com/realtime/china/story20201226-1111531</link>
            
            
            
            
            
                
            
            
