            <pubDate>Mon, 16 Nov 2020 07:03:00 GMT</pubDate>
            <guid isPermaLink="false">https://www.zaobao.com/realtime/china/story20201116-1101413</guid>
            <link>https://www.zaobao.com/realtime/china/story20201116-1101413</link>
            
            
            
            
            
                
            
            
