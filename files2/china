            <pubDate>Fri, 27 May 2022 01:38:00 GMT</pubDate>
            <guid isPermaLink="false">https://www.zaobao.com/realtime/china/story20220527-1276866</guid>
            <link>https://www.zaobao.com/realtime/china/story20220527-1276866</link>
            
            
            
            
            
                
            
            
