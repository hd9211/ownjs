            <pubDate>Wed, 28 Oct 2020 06:02:00 GMT</pubDate>
            <guid isPermaLink="false">https://www.zaobao.com/realtime/china/story20201028-1096450</guid>
            <link>https://www.zaobao.com/realtime/china/story20201028-1096450</link>
            
            
            
            
            
                
            
            
