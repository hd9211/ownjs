            <pubDate>Mon, 20 Dec 2021 08:51:00 GMT</pubDate>
            <guid isPermaLink="false">https://www.zaobao.com/realtime/china/story20211220-1224845</guid>
            <link>https://www.zaobao.com/realtime/china/story20211220-1224845</link>
            
            
            
            
            
                
            
            
