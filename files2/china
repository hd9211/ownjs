            <pubDate>Wed, 02 Dec 2020 06:04:00 GMT</pubDate>
            <guid isPermaLink="false">https://www.zaobao.com/realtime/china/story20201202-1105607</guid>
            <link>https://www.zaobao.com/realtime/china/story20201202-1105607</link>
            
            
            
            
            
                
            
            
