            <pubDate>Sat, 07 Nov 2020 12:22:00 GMT</pubDate>
            <guid isPermaLink="false">https://www.zaobao.com/realtime/china/story20201107-1099139</guid>
            <link>https://www.zaobao.com/realtime/china/story20201107-1099139</link>
            
            
            
            
            
                
            
            
