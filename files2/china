            <pubDate>Sat, 07 May 2022 02:39:00 GMT</pubDate>
            <guid isPermaLink="false">https://www.zaobao.com/realtime/china/story20220507-1270190</guid>
            <link>https://www.zaobao.com/realtime/china/story20220507-1270190</link>
            
            
            
            
            
                
            
            
