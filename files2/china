            <pubDate>Tue, 24 Nov 2020 08:22:00 GMT</pubDate>
            <guid isPermaLink="false">https://www.zaobao.com/realtime/china/story20201124-1103565</guid>
            <link>https://www.zaobao.com/realtime/china/story20201124-1103565</link>
            
            
            
            
            
                
            
            
