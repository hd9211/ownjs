            <pubDate>Thu, 07 Jul 2022 09:44:00 GMT</pubDate>
            <guid isPermaLink="false">https://www.zaobao.com/realtime/china/story20220707-1290607</guid>
            <link>https://www.zaobao.com/realtime/china/story20220707-1290607</link>
            
            
            
            
            
                
            
            
