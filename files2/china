            <pubDate>Wed, 23 Sep 2020 05:23:00 GMT</pubDate>
            <guid isPermaLink="false">https://www.zaobao.com/realtime/china/story20200923-1087207</guid>
            <link>https://www.zaobao.com/realtime/china/story20200923-1087207</link>
            
            
            
            
            
                
            
            
