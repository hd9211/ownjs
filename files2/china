            <pubDate>Sun, 27 Mar 2022 13:02:00 GMT</pubDate>
            <guid isPermaLink="false">https://www.zaobao.com/realtime/china/story20220327-1256648</guid>
            <link>https://www.zaobao.com/realtime/china/story20220327-1256648</link>
            
            
            
            
            
                
            
            
