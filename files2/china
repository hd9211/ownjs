            <pubDate>Mon, 16 Nov 2020 06:32:00 GMT</pubDate>
            <guid isPermaLink="false">https://www.zaobao.com/realtime/china/story20201116-1101416</guid>
            <link>https://www.zaobao.com/realtime/china/story20201116-1101416</link>
            
            
            
            
            
                
            
            
