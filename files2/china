            <pubDate>Wed, 16 Dec 2020 05:07:00 GMT</pubDate>
            <guid isPermaLink="false">https://www.zaobao.com/realtime/china/story20201216-1109229</guid>
            <link>https://www.zaobao.com/realtime/china/story20201216-1109229</link>
            
            
            
            
            
                
            
            
