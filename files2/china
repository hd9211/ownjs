            <pubDate>Mon, 28 Sep 2020 07:49:00 GMT</pubDate>
            <guid isPermaLink="false">https://www.zaobao.com/realtime/china/story20200928-1088550</guid>
            <link>https://www.zaobao.com/realtime/china/story20200928-1088550</link>
            
            
            
            
            
                
            
            
