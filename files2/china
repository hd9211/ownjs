            <pubDate>Wed, 30 Dec 2020 03:49:00 GMT</pubDate>
            <guid isPermaLink="false">https://www.zaobao.com/realtime/china/story20201230-1112509</guid>
            <link>https://www.zaobao.com/realtime/china/story20201230-1112509</link>
            
            
            
            
            
                
            
            
