            <pubDate>Wed, 19 Jan 2022 09:17:00 GMT</pubDate>
            <guid isPermaLink="false">https://www.zaobao.com/realtime/china/story20220119-1234458</guid>
            <link>https://www.zaobao.com/realtime/china/story20220119-1234458</link>
            
            
            
            
            
                
            
            
