            <pubDate>Fri, 11 Feb 2022 11:03:00 GMT</pubDate>
            <guid isPermaLink="false">https://www.zaobao.com/realtime/china/story20220211-1241747</guid>
            <link>https://www.zaobao.com/realtime/china/story20220211-1241747</link>
            
            
            
            
            
                
            
            
