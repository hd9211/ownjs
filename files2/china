            <pubDate>Thu, 29 Oct 2020 10:09:00 GMT</pubDate>
            <guid isPermaLink="false">https://www.zaobao.com/realtime/china/story20201029-1096775</guid>
            <link>https://www.zaobao.com/realtime/china/story20201029-1096775</link>
            
            
            
            
            
                
            
            
