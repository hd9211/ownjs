            <pubDate>Thu, 07 Jan 2021 08:57:00 GMT</pubDate>
            <guid isPermaLink="false">https://www.zaobao.com/realtime/china/story20210107-1114561</guid>
            <link>https://www.zaobao.com/realtime/china/story20210107-1114561</link>
            
            
            
            
            
                
            
            
