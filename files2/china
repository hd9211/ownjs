            <pubDate>Sun, 01 Nov 2020 02:20:00 GMT</pubDate>
            <guid isPermaLink="false">https://www.zaobao.com/realtime/china/story20201101-1097424</guid>
            <link>https://www.zaobao.com/realtime/china/story20201101-1097424</link>
            
            
            
            
            
                
            
            
