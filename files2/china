            <pubDate>Thu, 31 Dec 2020 08:50:00 GMT</pubDate>
            <guid isPermaLink="false">https://www.zaobao.com/realtime/china/story20201231-1112817</guid>
            <link>https://www.zaobao.com/realtime/china/story20201231-1112817</link>
            
            
            
            
            
                
            
            
