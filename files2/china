            <pubDate>Tue, 20 Oct 2020 02:42:00 GMT</pubDate>
            <guid isPermaLink="false">https://www.zaobao.com/realtime/china/story20201020-1094242</guid>
            <link>https://www.zaobao.com/realtime/china/story20201020-1094242</link>
            
            
            
            
            
                
            
            
